@model IEnumerable<MortgageHelperModels.PropertyListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Current Properties</h2>

<p>
    @Html.ActionLink("Add New Property", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PropertyType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PropertyType)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Size)
    </td>
    <td>
        @Html.ActionLink("See More", "Details", new { id = item.PropertyID }) |
        @Html.ActionLink("Calculate Mortgage Rates", "MortgageCalculator", "Mortgage", new { id = item.PropertyID }) |
        @Html.ActionLink("Edit Property", "Edit", new { id = item.PropertyID }) |
        <!-- NEED an edit features -->
        @Html.ActionLink("Remove Property", "Delete", new { id = item.PropertyID })
    </td>
</tr>
}

</table>
