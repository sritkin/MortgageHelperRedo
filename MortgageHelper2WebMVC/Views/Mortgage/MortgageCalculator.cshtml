@model MortgageHelperData.Mortgage

@{
    ViewBag.Title = "Mortgage Calculator";
}

<h2>Calculate Your Morgate Rate</h2>

    <br />
    <p>Fill out the Down Payment, Interest Rate, and Loan Period boxes - then clcik Calculate. You can do this as many times as you want.</p>
    <p>Each time you click Calculate, it will compare your down payment to the price listed for the property and generate a new monthly payment and total cost of a loan below.</p>
    <p> If your numbers seem innacurate - check your property's price.</p>
    <hr />
    @using (Html.BeginForm(null, null, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.HiddenFor(model => model.PropertyID)

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Payment, "Down Payment", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Payment, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Payment, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Interest, "Interest Rate(%)", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Interest, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Interest, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Period, "Loan Period(Years)", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Period, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Period, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Calculate" class="btn btn-primary" />
            <br/>
            <br />
        </div>
    </div>

    <div class="col-md-offset-2">
        <h3 >Results</h3>
        <br />
    </div>

    <div class="form-group">

        <div class=" control-label col-md-2">
            @Html.LabelFor(model => model.TotalLoanAmount, "Monthly Payment")
        </div>

        <div class="col-md-10">
            <p><input type="text" class="form-control" value="@ViewBag.ResultA" /> </p>
        </div>

    </div>

    <div class="form-group">


        <div class=" control-label col-md-2">
            @Html.LabelFor(model => model.TotalLoanAmount, "Total Lifetime Cost")
        </div>

        <div class="col-md-10">
            <p><input type="text" class="form-control" value="@ViewBag.ResultB" /> </p>
        </div>

    </div>

</div>
    }

    <p>
        @Html.ActionLink("Back to List", "Index", "Property")
    </p>
