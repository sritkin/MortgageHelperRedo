@model IEnumerable<MortgageHelperModels.RatingListItem>

@{
    ViewBag.Title = "Rating Index";
}
<br />
<h2>Compare Properties</h2>
<br />
<p>Here is a list of all of your properties with their auto-generated ratings. These will be removed whenever you remove a property from your list. They auto-sort from highest to lowest.</p>



<br />

@{
    var descendingList = Model.ToList().OrderByDescending(x => x.Rating);
    
    string word = "taco";
}

<table class="table">

    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
    </tr>

    @foreach (var item in descendingList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
        </tr>
    }
</table>